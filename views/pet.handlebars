<body>
    <header>
        <nav>
            <button onclick="window.location.href='/'">Home</button>
            <button onclick="window.location.href='/update-pet/{{pet.id}}'">Update</button> <!-- Update path accordingly -->
            <button onclick="window.location.href='/delete-pet/{{pet.id}}'">Delete</button> <!-- Update path accordingly -->
            <button onclick="window.location.href='/logout'">Logout</button> <!-- Update path accordingly -->
        </nav>
    </header>

    <main>
        <h1>{{pet.name}}</h1> <!-- Display the pet's name -->

        <div class='photo'>
            <img src='../public/images/1.png' width='200px' alt='image of pet 1'>
        </div>
        <div class='qrcode'>
            <img src="https://api.qrserver.com/v1/create-qr-code/?data=../public/images/1.png&size=200x200" alt="QR code for pet 1">
        </div>

        <h2>Add New Pet</h2>
        <form id="add-pet-form" action="/pets/add" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="pet-name">Pet Name:</label>
                <input type="text" id="pet-name" name="pet_name" required>
            </div>
            <div class="form-group">
                <label for="pet-species">Pet Species:</label>
                <input type="text" id="pet-species" name="pet_species" required>
            </div>
            <div class="form-group">
                <label for="pet-behavior">Pet Behavior:</label>
                <input type="number" id="pet-behavior" name="pet_behavior" required>
            </div>
            <div class="form-group">
                <label for="pet-breed">Pet Breed:</label>
                <input type="text" id="pet-breed" name="pet_breed">
            </div>
            <div class="form-group">
                <label for="kennel">Kennel:</label>
                <input type="text" id="kennel" name="kennel">
            </div>
            <div class="form-group">
                <label for="pet-color">Pet Color:</label>
                <input type="text" id="pet-color" name="pet_color">
            </div>
            <div class="form-group">
                <label for="pet-picture">Pet Picture:</label>
                <input type="file" id="pet-picture" name="pet_picture">
            </div>
            <div class="form-group">
                <button type="submit" id="save-button">Save</button>
                <button type="button" id="cancel-button" onclick="window.location.href='/cancel'">Cancel</button>
            </div>
        </form>
    </main>
</body>

<script>
        document.addEventListener("DOMContentLoaded", () => {
            const petId = "{{pet.id}}"; // Get the pet ID from the template

            // Home button functionality
            document.getElementById("home-button").addEventListener("click", () => {
                window.location.href = "/";
            });

            // Update button functionality
            document.getElementById("update-button").addEventListener("click", () => {
                window.location.href = `/update-pet/${petId}`;
            });

            // Delete button functionality
            document.getElementById("delete-button").addEventListener("click", () => {
                window.location.href = `/delete-pet/${petId}`;
            });

            // Logout button functionality
            document.getElementById("logout-button").addEventListener("click", () => {
                window.location.href = "/logout";
            });

            // Cancel button functionality in the form
            document.getElementById("cancel-button").addEventListener("click", () => {
                window.location.href = "/cancel";
            });
        });
    </script>