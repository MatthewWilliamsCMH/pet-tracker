<div class='container login inter-tight-regular'>
  <div class='login_form'>
    <h2>Login</h2>
  <!--  <form id='login-form' action='/api/users/login/password' method='POST'>  -->
    <form id='login-form'>
      <div>
        <label for='login-username'>Email:</label>
        <input type='text' id='login-username' name='username' required>
      
        <label for='login-password'>Password:</label>
        <input type='password' id='login-password' name='password' required>
      </div>
      <div>
        <button type='submit'>Login</button>
      </div>
    </form>
  </div>
  <div class='register_form'>
      <h2>Register</h2>
      <form id='register-form' action='api/users/register' method='POST'>
        <div>
          <label for='register-user'>Username:</label>
          <input type='text' id='register-user' name='user' required>

          <label for='register-email'>Email:</label>
          <input type='email' id='register-email' name='email' required>

          <label for='register-password'>Password:</label>
          <input type='password' id='register-password' name='password' required>
        </div>
        <div>
          <button type='submit'>Register</button>
        </div>
      </form>
  </div>
</div>

<script src='/js/login.js'></script>