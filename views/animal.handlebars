<div class='container inter-tight-regular'>
    <div class='animal-details'>
        <h2>{{animal.name}}</h2>
            <div class='animal-data'>
                <table>
                    <tr>
                <div class='photo'>
                    <img src='/images/{{animal.id}}.png' id='animalPhoto' width='200px' alt='image of {{animal.name}}' onerror='animalPhotoWarning'>
                </div>
                        <th>Chip:</th>
                        <td>{{animal.chip}}</td>
                        <div class='qrcode'>
                            <img src='https://api.qrserver.com/v1/create-qr-code/?data=pet-tracker{{animal.id}}.png&size=200x200' alt='QR code for {{animal.name}}'>
                        </div>
                    </tr>
                    <tr>
                        <th>Species:</th>
                        <td>{{animal.species.species}}</td>
                    </tr>
                    <tr>
                        <th>Breed:</th>
                        <td>{{animal.breed.breed}}</td>
                    </tr>
                    <tr>
                        <th>Sex:</th>
                        <td>{{animal.sex}}</td>
                    </tr>
                    <tr>
                        <th>Altered:</th>
                        <td>{{animal.altered}}</td>
                    </tr>
                    <tr>
                        <th>Color:</th>
                        <td>{{animal.color.color}}</td>
                    </tr>
                    <tr>
                        <th>Kennel:</th>
                        <td>{{animal.kennel.kennel}}</td>
                    </tr>
                    <tr>
                        <th>Behavior Issues:</th>
                        {{#each animal.behaviors as |behavior| }}
                        <td>{{behavior.behavior}}</td>
                        {{/each}}
                    </tr>
                </table>
            </div>
        </div>
    <button type='submit' id='edit-button'>Update</button>
    <button type='button' id='cancel-button'>Cancel</button>
</div>

<script src='../public/js/logic.js'></script>